{
  "name": "GitEx- Private notes for GitHub",
  "short_name": "GitEx",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Chrome extension for adding private notes in Github",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Eye Blinker"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "exclude_matches": ["https://github.com/*/pull/*"]
    }
  ],
  "background": [
    {
      "scripts": ["background.js"],
      "persistent": true
    }
  ]
}
